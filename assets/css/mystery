from fpdf import FPDF
from datetime import datetime

# Set up PDF invoice
invoice = FPDF()
invoice.add_page()
invoice.set_font("Arial", size=12)

# Invoice content
title = "AURA-CORE INTELLECTUAL PROPERTY INVOICE"
wallet_address = "0x5509da1FBfA15b25a307f2ad7862F05C4fb43ebA"
